<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qihoo.testtools_new.WelcomeActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#68c067" >

        <TextView
            android:id="@+id/app_manager_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/back_img"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/app_manager_appImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/app_manager_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/app_manager_appImg"
            android:text="360手机卫士"
            android:textColor="#fff"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/app_manager_count"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/app_manager_number_bg_07"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="选择测试的内容：4"
            android:textColor="#333333"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/app_manager_CPU_cb"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="30dp"
            android:checked="true"
            android:text="CPU测试"
            android:textColor="#4b4b4b"

            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/app_manager_mem_cb"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="30dp"
            android:checked="true"
            android:text="内存测试"
            android:textColor="#4b4b4b"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/app_manager__bat_cb"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="30dp"
            android:checked="true"
            android:text="电量测试"
            
            android:textColor="#4b4b4b"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/app_manager_traffic_cb"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="30dp"
            android:checked="true"
            android:text="流量测试"
            android:textColor="#4b4b4b"
            android:textSize="20sp" />

        <Button
            android:id="@+id/app_manager_start_btn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/app_manager_start_btn_03"
            android:text="启动测试"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/app_manager_history_btn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/app_manager_history_btn_03"
            android:text="查看记录"
            android:textColor="#666666"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>