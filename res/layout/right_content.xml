<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity" >

    <!-- buttom_banner  start -->

    <LinearLayout
        android:id="@+id/buttom_banner"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttom_banner_bg_03"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/buttom_banner_apps"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:layout_weight="1"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:src="@drawable/buttom_banner_apps_a" />

        <ImageButton
            android:id="@+id/buttom_banner_history"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:padding="6dp"
            android:layout_weight="1"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:src="@drawable/buttom_banner_history" />

        <ImageButton
            android:id="@+id/buttom_banner_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:layout_weight="1"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:src="@drawable/buttom_banner_settings" />
    </LinearLayout>

    <!-- buttom_banner  end -->

    <RelativeLayout
        android:id="@+id/top_banner"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_banner_bg_02"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/top_banner_change_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#0000"
            android:scaleType="fitCenter"
            android:src="@drawable/top_banner_change_btn" />

        <TextView
            android:id="@+id/top_banner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="应用程序"
            android:textColor="#fff"
            android:textSize="20sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttom_banner"
        android:layout_below="@id/top_banner"
        android:background="#fff" >
    </FrameLayout>

</RelativeLayout>